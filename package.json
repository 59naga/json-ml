{
  "name": "json_ml",
  "version": "0.0.1-alpha.3",
  "description": "JsonML parse/stringify function.",
  
  "scripts": {
    "cover": "jasminetea test --verbose --cover --report",

    "Developer commands":"",
      "start": "jasminetea test --verbose",
      "poststart": "zuul test/API.spec.coffee --local 59798 --open",
      "watch": "$(jqn package scripts.start) --watch",

    "Travis-CI commands":"",
      "test": "npm run cover",
      "posttest": "zuul test/API.spec.coffee --report",

    "Npm update via Travis-CI":"",
      "prepublish": "coffee --bare . && coffee --output lib --bare --compile src",

    "Bower build":"",
      "build": "$(jqn package browserify) | uglifyjs -cm > $(jqn bower main)",
      "postbuild": "wc -c $(jqn bower main)",

    "Bower update":"",
      "update": "git tag v$(jqn bower version) &&  git push --tags"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build && npm run cover"
    }
  },
  "browserify": "browserify src -t coffeeify -s JSONML --extension .coffee",
  "files": [
    "index.js",
    "lib"
  ],

  "dependencies": {
    "cheerio": "^0.19.0",
    "js-beautify": "^1.5.5"
  },
  "devDependencies": {
    "brfs": "^1.4.0",
    "browserify": "^10.2.1",
    "coffeeify": "^1.1.0",
    "coffee-script": "^1.9.2",
    "ghooks": "^0.3.2",
    "jasmine": "^2.3.1",
    "jasminetea": "^0.1.30-rc.3",
    "jqn": "0.0.3",
    "uglifyjs": "^2.4.10",
    "zuul": "git://github.com/59naga/zuul.git#5592c010065562e674a0a5d08598359008a518bd"
  },

  "keywords": [
    "jsonml",
    "html",
    "xml"
  ],
  "author": "59naga <i59naga@icloud.com> (http://berabou.me)",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/59naga/json-ml.git"
  },
  "bugs": {
    "url": "https://github.com/59naga/json-ml/issues"
  },
  "homepage": "https://github.com/59naga/json-ml#readme"
}
